<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/detail_product_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/detail_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toRightOf="@+id/detail_product_image"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/detail_product_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toRightOf="@+id/detail_product_image"
            app:layout_constraintTop_toBottomOf="@+id/detail_product_name"/>

        <TextView
            android:id="@+id/detail_per_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toRightOf="@+id/detail_product_image"
            app:layout_constraintTop_toBottomOf="@+id/detail_product_desc"/>
        <TextView
            android:id="@+id/detail_product_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toRightOf="@+id/detail_product_image"
            app:layout_constraintTop_toBottomOf="@+id/detail_per_item_price"/>
        <TextView
            android:id="@+id/detail_total_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@+id/detail_product_image"
            app:layout_constraintTop_toBottomOf="@+id/detail_product_count"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>